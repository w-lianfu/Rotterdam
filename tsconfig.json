{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2018",
    "module": "CommonJS",
    "lib": ["dom", "esnext"],
    "declaration": true,
    "declarationMap": true,
    "noEmit": true,
    "jsx": "react",
    "strict": true,
    "pretty": true,
    "sourceMap": true,
    /* Additional Checks */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    /* Module Resolution Options */
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "paths": {
      "@/*": ["src/*"],
      "@common/*": ["src/common/*"],
      "@commonComp/*": ["src/common/component/*"],
      "@commonStore/*": ["src/common/store/*"],
      "@commonScss/*": ["src/common/scss/*"],
      "@commonStyled/*": ["src/common/styled/*"],
      "@comp/*": ["src/component/*"],
      "@con/*": ["src/container/*"],
      "@store/*": ["src/store/*"],
      "@scss/*": ["src/scss/*"],
      "@styled/*": ["src/styled/*"],
      "@util/*": ["src/util/*"],
      "@tool/*": ["src/util/tool/*"],
      "@theme/*": ["src/util/theme/*"],
      "@lib/*": ["src/lib/*"],
      "@assets/*": ["src/assets/*"],
      "@image/*": ["src/assets/image/*"],
      "@doc/*": ["src/doc/*"]
    }
  },
  "include": ["src"],
  "exclude": [
    "test",
    "release",
    "src/main.prod.js",
    "src/renderer.prod.js",
    "src/dist",
    ".erb/dll",
    ".erb/configs",
    ".erb/scripts"
  ]
}
